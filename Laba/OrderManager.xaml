<Window x:Class="Laba.OrderManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba"
        mc:Ignorable="d"
        Title="OrderManager" Height="450" Width="800">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="237" Margin="381,67,0,0" VerticalAlignment="Top">
            <Button x:Name="Update_button" Content="Create order" HorizontalAlignment="Center" VerticalAlignment="Top" Height="38" Width="266" Margin="0,10,0,0" Click="Update_button_Click"/>
            <Button x:Name="Add_button" Content="Refresh" VerticalAlignment="Top" Height="38" Width="266" Margin="0,80,0,0" HorizontalAlignment="Center" Click="Add_button_Click"/>
        </Grid>
        <ListView x:Name="List" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="20,64,497,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="BackButton" Content="Back" HorizontalAlignment="Left" Margin="20,14,0,0" VerticalAlignment="Top" Height="39" Width="192" Click="StorageButton_Click"/>

    </Grid>
</Window>
